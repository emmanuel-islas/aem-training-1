<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Collapse"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Title of collapsed content"
                        fieldLabel="Title"
                        name="./custom-title"
                        xtype="textfield"/>
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Text that will be showed when user click on title"
                        fieldLabel="Title of the collapsed section"
                        name="./custom-textarea"
                        xtype="textarea"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
